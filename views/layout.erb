<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>IT Inventory</title>
    <style>
      :root { --bg: #0b0f14; --card: #0f1720; --muted: #9aa6b2; --accent: #6ad1ff; --accent-2: #8ef78e; --primary: #9eea6a; --danger:#ff6b6b; --cta: #28a745 }
      html, body { width:100%; height:100%; overflow-x: hidden; }
      body { font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; margin: 0; background:var(--bg); color:#e6eef6 }
      .app { display:flex; min-height:100vh; overflow-x: hidden }
      .sidebar { width:260px; background:linear-gradient(180deg,#07101a 0%, #0f1720 100%); color:#fff; padding:18px; box-sizing:border-box; position:relative }
      .sidebar h2 { margin:0 0 12px 0; font-size:1.1rem }
      .nav { list-style:none; padding:0; margin:12px 0 }
      .nav li { margin:8px 0 }
      .nav a { text-decoration:none; color:#cfeafc; display:flex; gap:10px; align-items:center; padding:8px; border-radius:6px }
      .nav a:hover { background: rgba(255,255,255,0.03) }
      .nav .icon { width:28px; text-align:center }
      .main { flex:1; padding:24px; box-sizing:border-box; overflow-x: hidden }
      .topbar { display:flex; justify-content:space-between; align-items:center; margin-bottom:12px }
      .container { max-width:1200px; margin:0 auto; box-sizing: border-box }
      /* Responsive: overlay sidebar on small screens */
      @media (max-width: 820px) {
        .app { flex-direction:column }
        .sidebar { position:fixed; left:0; top:0; bottom:0; width:260px; transform:translateX(-110%); transition: transform 260ms cubic-bezier(.2,.9,.24,1); z-index:1000; box-shadow: 4px 8px 30px rgba(0,0,0,0.6); background: linear-gradient(180deg,#07101a 0%, #0f1720 100%); }
        .sidebar.open { transform: translateX(0); }
        .nav { display:block; gap:8px }
        .nav li { margin:8px 0 }
        .sidebar-backdrop { position:fixed; inset:0; background:rgba(0,0,0,0.45); z-index:900; opacity:0; transition:opacity 160ms ease; pointer-events:none }
        .sidebar-backdrop.visible { opacity:1; pointer-events:auto }
      }
      .sidebar-toggle { cursor:pointer }
      table { border-collapse: collapse; width: 100%; background:var(--card); color:var(--muted) }
      th, td { text-align: left; padding: 8px; }
      th { background: rgba(255,255,255,0.04); color:#d7e9fb }
      a button{ padding:8px 12px; border-radius:4px; border:1px solid rgba(255,255,255,0.04); background:transparent; color:var(--accent) }

      /* Form & input styles */
      .form-card { background:var(--card); padding:18px; border-radius:8px; box-shadow: 0 6px 18px rgba(0,0,0,0.4) }
      form label { display:block; font-size:0.95rem; color: #d9e9fb; margin-bottom:6px }
      form label.required::after { content: " *"; color: #ff7b7b; margin-left:2px }
      .form-grid { display:grid; grid-template-columns: 1fr 1fr; gap:18px }
      .form-section { border-top:1px solid rgba(255,255,255,0.03); padding-top:14px; margin-top:8px }
      .field { margin-bottom:12px }
      input[type="text"], input[type="date"], input[type="number"], textarea { width:100%; padding:10px 12px; border-radius:6px; border:1px solid rgba(255,255,255,0.06); background: rgba(0,0,0,0.18); color: #eaf6ff; box-sizing:border-box }
      select {
        width:100%; padding:10px 12px; border-radius:6px; border:1px solid rgba(255,255,255,0.08);
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(0,0,0,0.14));
        color: #eaf6ff; box-sizing:border-box; -webkit-appearance:none; -moz-appearance:none; appearance:none;
        background-image: linear-gradient(45deg, transparent 50%, var(--muted) 50%), linear-gradient(135deg, var(--muted) 50%, transparent 50%);
        background-position: calc(100% - 18px) calc(50% - 6px), calc(100% - 13px) calc(50% - 6px);
        background-size: 6px 6px, 6px 6px; background-repeat: no-repeat;
      }
      /* Muted placeholder option shown when value is empty */
      option[value=""] { color: var(--muted) }
      option { color: #07101a }
      input:focus, textarea:focus, select:focus { outline:none; border-color: rgba(114,220,255,0.95); box-shadow: 0 0 0 3px rgba(106,209,255,0.06) }
      textarea { min-height:100px }
      .input-group { display:flex; align-items:center }
      .input-prefix { background: rgba(255,255,255,0.03); padding:8px 10px; border-radius:6px 0 0 6px; border-right:1px solid rgba(255,255,255,0.02); color:var(--muted) }
      .input-prefix + input { border-radius:0 6px 6px 0 }
      .stepper { width:120px }

      .form-actions { display:flex; gap:12px; margin-top:14px }
      .btn-primary { background:var(--primary); color:#07101a; padding:10px 18px; border-radius:8px; font-weight:600; border: none }
      /* Call-to-action button: visually prominent for actions like Confirm/Return */
      .btn-cta {
        background: var(--cta);
        color: #07101a;
        padding: 10px 18px;
        border-radius: 10px;
        font-weight: 700;
        border: none;
        box-shadow: 0 6px 18px rgba(255,209,102,0.12);
        transition: transform 120ms ease, box-shadow 120ms ease;
      }
      .btn-cta:hover { transform: translateY(-2px); box-shadow: 0 10px 24px rgba(255,209,102,0.18); }
      .btn-icon { display:inline-block; width:18px; text-align:center; margin-right:8px; font-size:14px; line-height:1 }
      /* Layout for action buttons to prevent accidental misclicks */
      .action-buttons { display:flex; gap:10px; align-items:center; flex-wrap:wrap }
      .action-buttons .btn-cta, .action-buttons .btn-secondary, .action-buttons form { margin: 0 }
      .btn-secondary { background:transparent; color:var(--muted); padding:10px 14px; border-radius:8px; border:1px solid rgba(255,255,255,0.04) }

      .flash { background: linear-gradient(90deg, rgba(154,234,106,0.12), rgba(138,200,255,0.06)); padding:12px; border-radius:8px; color: #dff8c6; margin-bottom:14px }

      @media (max-width: 880px) {
        .form-grid { grid-template-columns: 1fr }
      }
    </style>
  </head>
  <body>
    <div class="app">
      <aside class="sidebar">
        <h2>IT Inventory</h2>
          <ul class="nav">
          <li><a href="/dashboard"><span class="icon">üè†</span><span>Dashboard</span></a></li>
          <li><a href="/equipments"><span class="icon">üì¶</span><span>Inventory</span></a></li>
          <li>
            <a href="/requests"><span class="icon">üìù</span><span>Requests / Lending</span>
              <% if defined?(@pending_requests_count) && @pending_requests_count.to_i > 0 %>
                <span style="background:var(--danger);color:#0f1720;padding:2px 6px;border-radius:10px;margin-left:8px;font-size:0.8rem"><%= @pending_requests_count %></span>
              <% end %>
              <% if defined?(@pending_returns_count) && @pending_returns_count.to_i > 0 %>
                <span style="background:#ffd166;color:#062017;padding:2px 6px;border-radius:10px;margin-left:6px;font-size:0.8rem">‚ü≥ <%= @pending_returns_count %></span>
              <% end %>
            </a>
          </li>
          <% if current_user && (current_user.semi_admin? || current_user.super_admin?) %>
            <li><a href="/deploy"><span class="icon">üöö</span><span>Deploy</span></a></li>
          <% end %>
          <% if current_user && current_user.super_admin? %>
            <li><a href="/users"><span class="icon">üë•</span><span>Users & Departments</span></a></li>
          <% end %>
          <% if current_user && current_user.super_admin? %>
            <li><a href="/equipment_histories"><span class="icon">üßæ</span><span>Equipment History / Tracks</span></a></li>
          <% end %>
          <li><a href="/reports"><span class="icon">üìÑ</span><span>Reports</span></a></li>
          <li><a href="/reports/analytics"><span class="icon">üìä</span><span>Analytics</span></a></li>
          <li><a href="/repairs"><span class="icon">üîß</span><span>Equipment Repair</span></a></li>
          <li><a href="/settings"><span class="icon">‚öôÔ∏è</span><span>Settings</span></a></li>
        </ul>
        
        <div style="position:absolute; bottom:18px; width:calc(100% - 36px)">
          <a href="/logout" style="text-decoration:none; color:#cfeafc; display:flex; gap:10px; align-items:center; padding:8px; border-radius:6px; border:1px solid rgba(255,255,255,0.08); background:rgba(255,107,107,0.1); justify-content:center">
            <span class="icon">üö™</span>
            <span>Logout</span>
          </a>
        </div>
      </aside>

      <main class="main">
        <div class="container">
          <div class="topbar">
                <div style="display:flex; align-items:center; gap:12px">
                  <button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle menu" style="display:none; background:transparent; border:none; color:var(--accent); font-size:1.2rem">‚ò∞</button>
                  <a href="/dashboard">Home</a>
                </div>
            <div class="muted">&nbsp;</div>
          </div>

          <%= yield %>
        </div>
      </main>
    </div>
    <script>
      // Mobile sidebar overlay toggle with backdrop and animation
      (function(){
        var btn = document.getElementById('sidebarToggle');
        var sidebar = document.querySelector('.sidebar');
        var backdrop = null;
        function ensureBackdrop(){ if(!backdrop){ backdrop = document.createElement('div'); backdrop.className = 'sidebar-backdrop'; document.body.appendChild(backdrop); backdrop.addEventListener('click', closeSidebar); } }
        function openSidebar(){ ensureBackdrop(); sidebar.classList.add('open'); backdrop.classList.add('visible'); document.body.style.overflow = 'hidden'; }
        function closeSidebar(){ if(sidebar) sidebar.classList.remove('open'); if(backdrop) backdrop.classList.remove('visible'); document.body.style.overflow = ''; }
        function updateBtnVisibility(){ if(window.innerWidth <= 820){ btn.style.display='inline-block'; } else { btn.style.display='none'; closeSidebar(); } }
        updateBtnVisibility();
        window.addEventListener('resize', updateBtnVisibility);
        btn.addEventListener('click', function(){ if(sidebar.classList.contains('open')) closeSidebar(); else openSidebar(); });
      })();
    </script>
  </body>
</html>
